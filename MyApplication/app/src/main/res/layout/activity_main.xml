<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.agustin.myapplication.MainActivity"
    android:background="@android:color/background_light"
    android:weightSum="1">


    <Button
        android:text="Agregar Valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btAgregar"
        style="@style/Widget.AppCompat.Button"
        android:elevation="2dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:layout_weight="0.46" />

    <Button
        android:text="Eliminar elemento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:id="@+id/btEliminar"
        android:layout_below="@+id/btMostrar"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.41" />

    <Button
        android:text="Mostrar Todos"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:id="@+id/btMostrar"
        android:layout_weight="0.37"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/btAgregar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
